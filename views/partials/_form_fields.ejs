<div class="form-group">
    <label for="title">Title</label>
    <input required value="<%= article.title %>" type="text" class="form-control" id="title" name="title">
</div>
<div class="form-group">
    <label for="description">Description</label>
    <textarea class="form-control" id="description" name="description"><%= article.description %></textarea>
</div>
<div class="form-group">
    <label for="tag">Tag</label>
    <select id="tag" name="tag" class="form-control">
        <option value="blogpost" <% if (article.tag == "blogpost") { %>selected="selected"<% } %>>Blog Post</option>
        <option value="devlog" <% if (article.tag == "devlog") { %>selected="selected"<% } %>>Dev Log</option>
        <option value="project" <% if (article.tag == "project") { %>selected="selected"<% } %>>Project</option>
    </select>
</div>
<div class="form-group">
    <label for="githublink">Github Link</label>
    <input value="<%= article.githublink %>" type="text" class="form-control" id="githublink" name="githublink">
</div>
<div class="form-group">
    <label for="githubdownload">Github download</label>
    <input value="<%= article.githubdownload %>" type="text" class="form-control" id="githubdownload" name="githubdownload">
</div>
<div class="form-group">
    <label for="markdown">Content</label>
    <textarea class="form-control" id="markdown" name="markdown" rows="10"><%= article.markdown %></textarea>
</div>
<div class="form-group">
    <label for="previewImageURL">Preview Image URL</label>
    <textarea class="form-control mb-2" id="previewImageURL" name="previewImageURL"><%= article.previewImageURL %></textarea>
</div>
<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>